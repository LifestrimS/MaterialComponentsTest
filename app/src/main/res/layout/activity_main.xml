<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/bt_buttons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="toButtons"
            android:text="Buttons"
            android:layout_margin="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/bt_selection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="toSelection"
            android:text="Selection"
            android:layout_margin="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/bt_buttons" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/bt_chips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="toChips"
            android:text="Chips"
            android:layout_margin="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/bt_selection" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/bt_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="toCard"
            android:text="Card"
            android:layout_margin="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/bt_chips" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/bt_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="toBottom"
            android:text="BottomAppBar"
            android:layout_margin="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/bt_card" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/bt_bottom_cut_corner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="toBottomCutCorners"
            android:text="BottomAppBar cut corners"
            android:layout_margin="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/bt_bottom" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/bt_bottom_sheet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="toBottomSheet"
            android:text="Bottomsheet"
            android:layout_margin="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/bt_bottom_cut_corner" />

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/sw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginVertical="10dp"
            android:text="@string/swtch"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/bt_bottom_sheet" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:text="@string/extended_fab"
        app:icon="@drawable/ic_baseline_add_24" />


</androidx.coordinatorlayout.widget.CoordinatorLayout>
